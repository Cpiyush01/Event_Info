  <script>
    // JavaScript to handle event card click and fetch data from server

    document.addEventListener("DOMContentLoaded", () => {
      const eventCards = document.querySelectorAll(".flip-card");
      eventCards.forEach(card => {
        card.addEventListener("click", () => {
          const eventName = card.getAttribute("data-event");
          fetchEventDetails(eventName);
        });
      });
    });

    function fetchEventDetails(eventName) {
      // Make a fetch request to the backend to get participants for the event
      fetch(`/admin/get-participants/${eventName}`)
        .then(response => response.json())
        .then(data => {
          if (data.success) {
            displayParticipants(data.participants);
          } else {
            alert('No participants found or error occurred.');
          }
        })
        .catch(error => console.error('Error fetching participants:', error));
    }

    function displayParticipants(participants) {
  if (!participants || participants.length === 0) {
    // Handle empty or undefined participants array
    const table = document.getElementById("participant-table");
    table.innerHTML = `
      <thead>
        <tr><th colspan="3">No participants found</th></tr>
      </thead>
    `;
    return; // Exit function if no participants
  }

  console.log(participants); // Debugging the data

  // Clear any previous table data
        // Store in localStorage
        localStorage.setItem("participants", JSON.stringify(participants));

// Redirect to new page
window.location.href = "viewdetails.html";
    }

  </script>
