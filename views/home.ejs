<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>VIGNAN VIBEZ - Event Tracker</title>
   <link rel="stylesheet" href="css/front.css">
   <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">

</head>
<body>

<header class="header">
    <div class="logo">
        <img src="./images/logo.jpg" alt="Logo" id="logo">
    </div>
    <nav class="nav">
        <ul>
            <li><a href="/">Home</a></li>
            <li><a href="#events">Events</a></li>
            <li><a href="#contact">Contact</a></li>
            <li><a href="/login">Login</a></li>
        </ul>
    </nav>
</header>

<section class="banner" id="home">
    <h2><span id="element"></span></h2>
   
    <p>Find out where and when the most exciting events are happening.</p>
</section>

<section class="events" id="events">
    <h2>Upcoming Events</h2>
    <div class="carousel">
      <div class="carousel-track">
        <div class="event-card"><img src="./images/event1.jpg" alt="1" style="height: 185px;"><h3>Cricket</h3></div>
        <div class="event-card"><img src="./images/event2.jpg" alt="2" style="height: 185px;"><h3>Dance</h3></div>
        <div class="event-card"><img src="./images/event3.jpg" alt="3"><h3>Tech</h3></div>
      </div>
    </div>
  </section>
  
  
<!-- Additional Sections -->

<!-- Live Updates Ticker -->
<section class="live-updates" style="padding: 20px; background: rgba(0, 0, 0, 0.7); color: #ffcc00; text-align: center;">
    <h2>Live Updates</h2>
    <marquee behavior="scroll" direction="left" style="font-size: 18px;">üî• Hackathon registrations are now open! | üèè Cricket semi-finals happening now! | üé≠ Cultural fest starts at 6 PM! </marquee>
</section>

<!-- Past Events -->
<section class="past-events" style="padding: 40px 20px; background: rgba(30, 30, 30, 0.8); color: #ffcc00; text-align: center;">
    <h2>Past Events</h2>
    <div style="display: flex; justify-content: center; gap: 20px; flex-wrap: wrap;">
        <div class="event-card">
            <img src="./images/tech.jpg" alt="Past Event 1">
            <h3>Tech Expo 2024</h3>
        </div>
        <div class="event-card">
            <img src="./images/vsports.jpg" alt="Past Event 2" style="height: 185px;">
            <h3>Sports Meet</h3>
        </div>
        <div class="event-card">
            <img src="./images/past_event3.jpg" alt="Past Event 3">
            <h3>Music Night</h3>
        </div>
    </div>
</section>

<!-- Social Media Links -->
<section class="social-media" style="padding: 40px 20px; background: rgba(0, 0, 0, 0.6); text-align: center; color: #ffcc00;">
    <h2>Follow Us</h2>
    <p>Stay connected for the latest updates!</p>
    <!-- Facebook -->
    <i class="fab fa-facebook"></i>

    <!-- Instagram -->
    <i class="fab fa-instagram"></i>

    <!-- Twitter -->
    <i class="fab fa-twitter"></i>

</section>



<footer class="footer" id="contact">
    <p><a href="/register">WANT TO KNOW MORE? Click here!</a></p>
</footer>

<script src="https://unpkg.com/typed.js@2.1.0/dist/typed.umd.js"></script>

  <!-- Setup and start animation! -->
  <script>
    var typed = new Typed('#element', {
      strings: ['Welcome to VIGNAN VIBEZ'],
      typeSpeed: 50,
      backSpeed: 30,
    loop: true,
    });
  </script>
</body>


<script>
    const track = document.querySelector('.carousel-track');
  const cards = document.querySelectorAll('.event-card');

  // Clone all cards and append to track
  cards.forEach(card => {
    const clone = card.cloneNode(true);
    track.appendChild(clone);
  });
</script>

</body>
</html>