  <script>
    window.onload = function () {
      alert("ðŸ“¢ Reminder: Tech Seminar Today at 10:00 AM in the Auditorium! Register now.");
    };

    function confirmAndRedirect(eventName) {
      if (confirm(`Are you sure you want to register for "${eventName}"?`)) {
        window.location.href = `/register?event=${encodeURIComponent(eventName)}`;
      }
    }
  </script>

</body>
</html>